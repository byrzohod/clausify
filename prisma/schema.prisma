generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Subscription info
  plan              Plan      @default(FREE)
  analysesUsed      Int       @default(0)
  analysesLimit     Int       @default(2)
  stripeCustomerId  String?   @unique
  subscriptionId    String?   @unique
  subscriptionEnd   DateTime?

  // Referral info
  referralCode      String?   @unique @default(cuid())

  // Relations
  accounts          Account[]
  sessions          Session[]
  contracts         Contract[]
  templates         Template[]
  tags              Tag[]
  badges            UserBadge[]
  referralsMade     Referral[] @relation("Referrer")
  referredBy        Referral?  @relation("Referred")
  expirationAlerts  ExpirationAlert[]
  slackIntegration  SlackIntegration?
  emailPreferences  EmailPreferences?
  apiKeys           ApiKey[]
  webhooks          Webhook[]
  workspaces        WorkspaceMembership[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Contract model for uploaded documents
model Contract {
  id        String         @id @default(cuid())
  userId    String
  fileName  String
  fileUrl   String
  fileSize  Int
  mimeType  String
  status    ContractStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  // Relations
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  analysis        Analysis?
  tags            ContractTag[]
  expirationAlert ExpirationAlert?

  @@index([userId])
  @@index([userId, createdAt])
  @@index([fileName]) // For search
  @@map("contracts")
}

// Analysis model for AI results
model Analysis {
  id         String       @id @default(cuid())
  contractId String       @unique
  status     AnalysisStatus @default(PROCESSING)

  // Analysis results stored as JSON
  summary       String?   @db.Text
  contractType  ContractType?
  riskScore     RiskLevel?
  keyTerms      Json?
  obligations   Json?
  redFlags      Json?
  sections      Json?
  parties       Json?
  dates         Json?
  amounts       Json?
  rawResponse   String?   @db.Text

  // Processing info
  processingTime Int?     // in milliseconds
  tokenCount     Int?
  error          String?  @db.Text

  // Cache key for identical content detection
  contentHash   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  contract Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)

  @@index([status, createdAt])
  @@index([contentHash, status, createdAt])
  @@map("analyses")
}

// Demo analysis for unauthenticated users
model DemoAnalysis {
  id           String   @id @default(cuid())
  ipAddress    String
  fingerprint  String?
  contractType ContractType
  analysisData Json
  createdAt    DateTime @default(now())

  @@index([ipAddress])
  @@map("demo_analyses")
}

// Contract template for comparison
model Template {
  id           String       @id @default(cuid())
  userId       String
  name         String
  description  String?
  contractType ContractType
  content      String       @db.Text
  isPublic     Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([contractType])
  @@index([userId, contractType])
  @@map("templates")
}

// Tag model for contract organization
model Tag {
  id        String   @id @default(cuid())
  userId    String
  name      String
  color     String   @default("#6366f1") // Default indigo
  createdAt DateTime @default(now())

  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  contracts ContractTag[]

  @@unique([userId, name])
  @@index([userId])
  @@map("tags")
}

// Many-to-many relation between Contract and Tag
model ContractTag {
  id         String   @id @default(cuid())
  contractId String
  tagId      String
  createdAt  DateTime @default(now())

  contract Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
  tag      Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([contractId, tagId])
  @@index([contractId])
  @@index([tagId])
  @@map("contract_tags")
}

// Badge model for gamification
model Badge {
  id          String   @id @default(cuid())
  code        String   @unique // e.g., "first_analysis", "power_user"
  name        String
  description String
  icon        String   // Icon name or emoji
  requirement Int      // Number required to earn (e.g., 10 analyses)
  category    BadgeCategory
  createdAt   DateTime @default(now())

  // Relations
  users UserBadge[]

  @@map("badges")
}

// Many-to-many relation between User and Badge
model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@map("user_badges")
}

// Referral model for referral program
model Referral {
  id            String   @id @default(cuid())
  referrerUserId String
  referredUserId String  @unique
  referralCode  String
  status        ReferralStatus @default(PENDING)
  bonusApplied  Boolean  @default(false)
  createdAt     DateTime @default(now())
  completedAt   DateTime?

  referrer User @relation("Referrer", fields: [referrerUserId], references: [id], onDelete: Cascade)
  referred User @relation("Referred", fields: [referredUserId], references: [id], onDelete: Cascade)

  @@index([referrerUserId])
  @@index([referralCode])
  @@map("referrals")
}

// Expiration alert model
model ExpirationAlert {
  id         String   @id @default(cuid())
  userId     String
  contractId String
  expirationDate DateTime
  alertDays  Int      @default(30) // Days before to alert
  notified   Boolean  @default(false)
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contract Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)

  @@unique([contractId])
  @@index([userId])
  @@index([expirationDate, notified])
  @@map("expiration_alerts")
}

// Slack integration model
model SlackIntegration {
  id           String   @id @default(cuid())
  userId       String   @unique
  teamId       String
  teamName     String
  accessToken  String   @db.Text
  webhookUrl   String?
  channelId    String?
  channelName  String?
  notifyOnAnalysis Boolean @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("slack_integrations")
}

// Email preferences model
model EmailPreferences {
  id                    String   @id @default(cuid())
  userId                String   @unique
  analysisComplete      Boolean  @default(true)
  expirationAlerts      Boolean  @default(true)
  marketingEmails       Boolean  @default(false)
  weeklyDigest          Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_preferences")
}

// API key model
model ApiKey {
  id          String    @id @default(cuid())
  userId      String
  name        String
  key         String    @unique // Hashed API key
  prefix      String    // First 8 chars for identification
  lastUsed    DateTime?
  expiresAt   DateTime?
  rateLimit   Int       @default(100) // Requests per minute
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())

  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  usage ApiUsage[]

  @@index([key])
  @@index([userId])
  @@map("api_keys")
}

// API usage tracking
model ApiUsage {
  id        String   @id @default(cuid())
  apiKeyId  String
  endpoint  String
  method    String
  status    Int
  duration  Int      // milliseconds
  timestamp DateTime @default(now())

  apiKey ApiKey @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  @@index([apiKeyId, timestamp])
  @@map("api_usage")
}

// Webhook model for API notifications
model Webhook {
  id          String   @id @default(cuid())
  userId      String
  url         String
  secret      String   // For signature verification
  events      String[] // ["analysis.completed", "contract.uploaded"]
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("webhooks")
}

// Workspace model for teams
model Workspace {
  id                   String        @id @default(cuid())
  name                 String
  slug                 String        @unique
  plan                 WorkspacePlan @default(TEAM_MONTHLY)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  maxMembers           Int           @default(5)
  analysesLimit        Int           @default(100)
  analysesUsed         Int           @default(0)
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  members     WorkspaceMembership[]
  contracts   WorkspaceContract[]
  invitations WorkspaceInvitation[]

  @@map("workspaces")
}

// Workspace membership
model WorkspaceMembership {
  id          String        @id @default(cuid())
  userId      String
  workspaceId String
  role        WorkspaceRole @default(MEMBER)
  invitedBy   String?
  joinedAt    DateTime      @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@index([workspaceId])
  @@map("workspace_memberships")
}

// Workspace invitation
model WorkspaceInvitation {
  id          String        @id @default(cuid())
  workspaceId String
  email       String
  role        WorkspaceRole @default(MEMBER)
  token       String        @unique
  invitedBy   String
  expiresAt   DateTime
  createdAt   DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, email])
  @@map("workspace_invitations")
}

// Contracts belonging to workspace
model WorkspaceContract {
  id          String   @id @default(cuid())
  workspaceId String
  contractId  String   @unique
  addedBy     String
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@map("workspace_contracts")
}

// Enums
enum Plan {
  FREE
  PAY_PER_USE
  PRO_MONTHLY
  PRO_ANNUAL
  TEAM
}

enum BadgeCategory {
  MILESTONE
  ACTIVITY
  SPECIAL
}

enum ReferralStatus {
  PENDING
  COMPLETED
  EXPIRED
}

enum ContractStatus {
  PENDING
  UPLOADING
  UPLOADED
  ANALYZING
  COMPLETED
  FAILED
}

enum AnalysisStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum ContractType {
  NDA
  EMPLOYMENT
  LEASE
  SERVICE
  FREELANCE
  SALES
  PARTNERSHIP
  LICENSE
  LOAN
  OTHER
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum WorkspacePlan {
  TEAM_MONTHLY
  TEAM_YEARLY
  BUSINESS_MONTHLY
  BUSINESS_YEARLY
  ENTERPRISE
}
